.carddetailPage
  .container
    .cardContents
      .cardContents_title
        %div タイトル
        %h3= @card.title
      .cardContents_memo
        %div メモ
        %div= @card.memo
      .cardContents_listStatus
        %div リスト名
        %div= @card.list.title
      .cardContents_listStatus
        %div ステータス
        %div= @card.status
      .cardContents_btnArea
        = link_to '編集する', edit_list_card_path(@card.list, @card), class: "edit_btn"
        = link_to '削除', list_card_path(@card.list, @card), class: "text-danger delete_btn", method: :delete, data: { confirm: "このカードを削除して大丈夫ですか?" }
