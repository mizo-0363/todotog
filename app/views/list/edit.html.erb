<div class = "listeditPage">
  <% if @list.errors.any? %>
    <p class = "alert">タイトルは1〜255文字内で入力して下さい</p>
  <% end %>
  <div class = "container">
    <%= form_with model: @list, url: { action: :update }, html: { class: 'listForm' }, local: true do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control  listName", placeholder: "リスト名" %>
      <div class = "text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>